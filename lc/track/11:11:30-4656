my $actors = [Bing->new, Shy->new, Foo->new, Bar->new];
my $stats;
my $started = 0;

sub init {
    my $self = shift;
    $self->{loop} = [];
    $self->{loopsize} = 32;
    $self->{actors} = $actors;
    $stats = $self->{stats} = {};
    $self->{init}++;
}

sub bang {
    my $self = shift;
    if (not $started and $self->{bangs} % 16) {
        return;
    }
    $started = 1;
    $self->init() unless $self->{init}; 
    foreach my $actor (@$actors) {
        if ($actor->bang) {
            $self->t({sample => $actor->sample,
                      speed => $actor->speed * 2,
                      shape  => $actor->shape,
                      volume => $actor->volume * 0.5
                     }
                    );
            $self->line(1, $self->{bangs});
        }
    }
    $self->line(0, "hello $self->{init}.");
    $self->modified;
}

package Thing;

sub new {
    my $package = shift;
    my $p = shift;
    $p ||= {};
    bless($p, $package);
}
sub shape {0}
sub speed {
    1;
}

sub bang {
    my $self = shift;
    my $result = 0;
    my $pkg = ref($self);
    my $kind = $stats->{$pkg};
    my $other = undef;
    while (my ($key, $value) = each(%$stats)) {
        if ($key ne $pkg) {
            if (not defined $other) {
                $other = $value;
            }
            elsif ($value < $other) {
                $other = $value;
            }
        }
    }
    if (((not defined $kind) or $kind >= $self->min_distance_from_kind)
        and
        ((not defined $other) or $other >= $self->min_distance_from_other)
       ) {
       $result = 1;
       $stats->{$pkg} = 1;
    }
    else {
        $stats->{$pkg}++;
    }
    return($result);
}

sub min_distance_from_kind {
    10;
}

sub min_distance_from_other {
    6;
}

sub sample {
    0
}

sub speed {
    1
}

sub volume {
    1
}

