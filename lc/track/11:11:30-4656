package Shy;

use base qw/Thing/;

sub min_distance_from_kind {
    12;
}

sub min_distance_from_other {
    4;
}
sub shape { 0 }
sub sample {
    'bubble/4';
}
sub speed {0.1}

package Foo;

use base qw/Thing/;

sub min_distance_from_kind {
    8;
}

sub min_distance_from_other {
    4;
}
sub speed {
    2
}
sub sample {
    'bubble/2';
}

package Bar;

use base qw/Thing/;

sub min_distance_from_kind {
    16;
}

sub min_distance_from_other {
    rand() > 0.5 ? 6 : 8;
}

sub sample {
    'insect/0'
}

sub shape {
    0
}

sub speed {
    1;
}